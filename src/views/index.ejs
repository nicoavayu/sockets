<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.1/gsap.min.js"></script> <!-- Incluye GSAP -->
<script>
    AOS.init({
        duration: 1200, // Duración de las animaciones (1.2 segundos)
    });

    window.addEventListener('scroll', function() {
        var header = document.querySelector('header');
        var logo = document.querySelector('.navbar-brand img');
        if (window.scrollY > 50) {
            header.classList.add('scrolled');
            logo.classList.add('scrolled');
        } else {
            header.classList.remove('scrolled');
            logo.classList.remove('scrolled');
        }
    });

    document.addEventListener('DOMContentLoaded', function() {
        const accessToken = 'IGQWRNMXVIckxYUnRwSG9iNUZAUal8za1lfVE42eEZASdFI4QW5Ea3NGcXU5TXhmNmYyMGllNmxNdXlONDVsVE84MGFSNjliVU0yY005ZAkJ5dVZARNGZAGM3JfVGhldC1HeVdTbjZAyUEtQVDMySzFPWDB5ckdyQW9scFEZD'; // Token de acceso de Instagram
        const instagramFeed = document.getElementById('instagram-feed');
        let isDown = false;
        let startX;
        let scrollLeft;
        let isDragging = false;

        fetch(`https://graph.instagram.com/me/media?fields=id,caption,media_url,permalink&access_token=${accessToken}`)
            .then(response => response.json())
            .then(data => {
                const posts = data.data.slice(0, 12); // Obtener las últimas 12 publicaciones
                displayPosts(posts);
            })
            .catch(error => console.error('Error fetching Instagram posts:', error));

        function displayPosts(posts) {
            instagramFeed.innerHTML = '';
            posts.forEach(post => {
                let postElement = document.createElement('div');
                postElement.className = 'instagram-post';
                postElement.innerHTML = `
                    <a href="${post.permalink}" target="_blank">
                        <div class="overlay">
                            <i class="fab fa-instagram"></i> <!-- Ícono de Instagram -->
                        </div>
                        <img src="${post.media_url}" alt="${post.caption}">
                    </a>
                `;
                instagramFeed.appendChild(postElement);
            });
        }

        instagramFeed.addEventListener('mousedown', (e) => {
            isDown = true;
            isDragging = false;
            startX = e.pageX - instagramFeed.offsetLeft;
            scrollLeft = instagramFeed.scrollLeft;
            instagramFeed.classList.add('active');
        });

        instagramFeed.addEventListener('mouseleave', () => {
            isDown = false;
            instagramFeed.classList.remove('active');
        });

        instagramFeed.addEventListener('mouseup', () => {
            isDown = false;
            instagramFeed.classList.remove('active');
        });

        instagramFeed.addEventListener('mousemove', (e) => {
            if (!isDown) return;
            e.preventDefault();
            isDragging = true;
            const x = e.pageX - instagramFeed.offsetLeft;
            const walk = (x - startX) * 1.5; // Ajustar la velocidad de desplazamiento
            gsap.to(instagramFeed, { scrollLeft: scrollLeft - walk, duration: 0.5, ease: "power2.out" });
        });

        instagramFeed.addEventListener('click', (e) => {
            if (isDragging) {
                e.preventDefault();
                isDragging = false;
            }
        });

        // Add touch support
        let startTouchX;
        let startTouchScrollLeft;
        instagramFeed.addEventListener('touchstart', (e) => {
            isDown = true;
            isDragging = false;
            startTouchX = e.touches[0].pageX - instagramFeed.offsetLeft;
            startTouchScrollLeft = instagramFeed.scrollLeft;
            instagramFeed.classList.add('active');
        });

        instagramFeed.addEventListener('touchmove', (e) => {
            if (!isDown) return;
            isDragging = true;
            const x = e.touches[0].pageX - instagramFeed.offsetLeft;
            const walk = (x - startTouchX) * 1.5; // Ajustar la velocidad de desplazamiento
            gsap.to(instagramFeed, { scrollLeft: startTouchScrollLeft - walk, duration: 0.5, ease: "power2.out" });
        });

        instagramFeed.addEventListener('touchend', () => {
            isDown = false;
            instagramFeed.classList.remove('active');
        });
    });
</script>
